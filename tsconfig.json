{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "components":["./src/components"],
      "components/*":["./src/components/*"],
      "store":["./src/store"],
      "store/*":["./src/store/*"],
      "patterns":["./src/patterns"],
      "patterns/*":["./src/patterns/*"],
      "types":["./src/types"],
      "types/*":["./src/types/*"],
      "themes":["./src/themes"],
      "themes/*":["./src/themes/*"],
      "utils":["./src/utils"],
      "utils/*":["./src/utils/*"],
      "hooks":["./src/hooks"],
      "hooks/*":["./src/hooks/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
} 